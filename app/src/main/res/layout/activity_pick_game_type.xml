<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pick_game"
        android:background="@color/blue"
        android:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar_pick_game"-->
        <!--android:layout_width="match_parent"-->
        <!--android:padding="0dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@color/colorPrimary">-->

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="@string/pickgametype"-->
            <!--android:textColor="@color/offBlack"-->
            <!--android:textSize="@dimen/toolbar_text"-->
            <!--android:textStyle="bold" />-->

    <!--</android.support.v7.widget.Toolbar>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cool_gray"
        android:layout_marginTop="@dimen/btn_padding_vertical"
        android:layout_marginBottom="@dimen/btn_padding_vertical"
        android:layout_marginLeft="@dimen/btn_padding_horizontal"
        android:layout_marginRight="@dimen/btn_padding_horizontal"
        android:layout_weight="1">



        <Button
            android:id="@+id/btn_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector"
            android:text="@string/gametype1"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text"
            android:paddingBottom="30dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_subtitle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/button_subtext"
            android:gravity="center"
            android:paddingTop="35dp"
            android:textColor="@color/grayE"
            android:visibility="visible"
            android:text="@string/sub_game_type1"
            />

        <TextView
            android:id="@+id/tv_selected1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_text"
            android:textColor="@color/green"
            android:text="@string/fontawesome_selected"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <!--android:background="@drawable/pick_game_button_selector"-->


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_thinkness"
        android:background="@color/grayE"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cool_gray"
        android:layout_marginTop="@dimen/btn_padding_vertical"
        android:layout_marginBottom="@dimen/btn_padding_horizontal"
        android:layout_marginLeft="@dimen/btn_padding_horizontal"
        android:layout_marginRight="@dimen/btn_padding_horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/button_text"
            android:paddingBottom="40dp"
            android:background="@drawable/button_selector"
            android:textStyle="bold"
            android:textColor="@color/grayB"
            android:text="@string/gametype2"/>

        <TextView
            android:id="@+id/tv_subtitle2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/button_subtext"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="45dp"
            android:textColor="@color/grayB"
            android:visibility="visible"
            android:text="@string/sub_game_type2"
            />

        <TextView
            android:id="@+id/tv_selected2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/button_text"
            android:textColor="@color/green"
            android:visibility="invisible"
            android:text="@string/fontawesome_selected"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>

</LinearLayout>
